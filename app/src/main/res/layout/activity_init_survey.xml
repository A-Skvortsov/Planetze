<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Init_Survey">

    <!-- Interactive part (box) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="406dp"
        android:layout_height="594dp"
        android:background="@color/palette_light_blue"
        android:padding="10dp"
        android:radius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.413">

        <!-- Category of question -->
        <TextView
            android:id="@+id/category"
            android:layout_width="244dp"
            android:layout_height="34dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical"
            android:text="Transportation"
            android:textColor="@color/palette_light_gray"

            android:textStyle="italic|bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Question box -->
        <TextView
            android:id="@+id/question"
            android:layout_width="341dp"
            android:layout_height="55dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="68dp"
            android:background="@color/white"
            android:gravity="center_vertical"

            android:padding="8dp"
            android:text=""
            android:textColor="@color/palette_black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Multiple Choice Buttons -->
        <RadioGroup
            android:id="@+id/options"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question" />

        <!-- "Next" button -->
        <Button
            android:id="@+id/iteratorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="34dp"
            android:backgroundTint="@color/palette_turquoise"
            android:text="Next"

            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- "Please select an answer" prompt for when user tries to proceed without answering-->
        <TextView
            android:id="@+id/please_answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/please_answer2"
            app:layout_constraintTop_toBottomOf="@+id/options"

            android:text="Please select an answer"
            android:textColor="@color/palette_black"
            android:visibility="invisible"/>
        <!-- also part of the "select an answer" prompt-->
        <TextView
            android:id="@+id/please_answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/options"
            app:layout_constraintTop_toBottomOf="@+id/options"

            android:text="*"
            android:textColor="@android:color/holo_red_light"
            android:visibility="invisible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>