<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/palette_light_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Spinner
                android:id="@+id/selectCat"
                android:layout_width="229dp"
                android:layout_height="53dp"
                android:layout_marginTop="144dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/selectActivity"
                android:layout_width="229dp"
                android:layout_height="53dp"
                android:layout_marginTop="28dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/selectCat"
                app:layout_constraintHorizontal_bias="0.428"
                app:layout_constraintStart_toStartOf="@+id/selectCat"
                app:layout_constraintTop_toBottomOf="@+id/selectCat" />

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="72dp"
                android:text="Save"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/selectActivity" />

            <Button
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="72dp"
                android:text="Back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/selectActivity" />

            <RadioGroup
                android:id="@+id/inputBox1"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/selectActivity"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/selectActivity"
                app:layout_constraintTop_toBottomOf="@+id/selectActivity" />

            <RadioGroup
                android:id="@+id/inputBox2"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/inputBox1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/inputBox1"
                app:layout_constraintTop_toBottomOf="@+id/inputBox1" />

            <TextView
                android:id="@+id/input1Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold|italic"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/inputBox1"
                app:layout_constraintStart_toStartOf="@+id/inputBox1" />

            <TextView
                android:id="@+id/input2Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold|italic"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/inputBox2"
                app:layout_constraintStart_toStartOf="@+id/inputBox2" />

            <TextView
                android:id="@+id/issuePrompt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="*"
                android:visibility="invisible"
                android:textStyle="bold|italic"
                android:textColor="@android:color/holo_red_light"
                app:layout_constraintBottom_toTopOf="@+id/backBtn"
                app:layout_constraintEnd_toStartOf="@+id/issuePrompt2" />

            <TextView
                android:id="@+id/issuePrompt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please select an answer"
                android:textSize="15dp"
                android:textStyle="bold|italic"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/saveBtn"
                app:layout_constraintEnd_toEndOf="@+id/saveBtn"
                app:layout_constraintStart_toStartOf="@+id/backBtn"
                android:textColor="@color/white"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>