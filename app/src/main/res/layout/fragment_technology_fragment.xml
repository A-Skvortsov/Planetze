<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Technology_fragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:background="#E1F1F1"
        tools:context=".Details">

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="30dp"
            app:cardBackgroundColor="@color/palette_turquoise"


            android:layout_marginTop="30dp"
            app:cardElevation="30dp"
            app:cardCornerRadius="20dp">


            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:src="@mipmap/solar" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/detailDescription"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@color/palette_turquoise"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:paddingStart="50dp"
            android:padding="10dp"
            android:text="Sustainable Technology"
            android:textColor="@color/clean_air_background"

            android:textSize="34sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:background="@color/palette_turquoise"
            android:layout_width="350dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/detailsParapgraph"
                android:layout_width="250dp"
                android:layout_height="220dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="GivePower Foundation is a foundation that supplies eco-friendly equipment like solar panels, to developing regions who need it the most. Using Solar technology helps stop using other technologies that rely on fossil fuels, which are responsible for 40% of the carbon dioxide emitted in the world."
                android:textColor="@color/clean_air_background"
                android:textStyle="bold" />
        </RelativeLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:text="Click here to Donate"
            android:bottomRightRadius="30dp"
            android:bottomLeftRadius="30dp"
            android:topLeftRadius="30dp"
            android:topRightRadius="30dp"



            android:background="@color/red"/>
    </LinearLayout>

</FrameLayout>